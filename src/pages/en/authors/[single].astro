---
import BlogCard from "@/components/BlogCard.astro";
import ImageMod from "@/components/ImageMod.astro";
import Social from "@/components/Social.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { slugify } from "@/lib/utils/textConverter";
import { render } from "astro:content";

// Mengatur path statis untuk penulis versi Inggris
export async function getStaticPaths() {
  const authors = await getSinglePage("authors");
  
  // Filter: Hanya ambil file dari folder 'en/'
  const enAuthors = authors.filter((author) => author.id.startsWith("en/"));

  return enAuthors.map((author) => ({
    params: {
      // Menghapus 'en/' agar URL menjadi /en/authors/nama-penulis
      single: author.id.replace("en/", ""),
    },
    props: { author },
  }));
}

const { author } = Astro.props;
const { title, social, meta_title, description, image } = author.data;
const { Content } = await render(author);

// Ambil postingan blog
const allPosts = await getSinglePage("blog");

// FILTER: Hanya ambil postingan dari folder 'en/' yang ditulis oleh penulis ini
const postFilterByAuthor = allPosts.filter(
  (post) => 
    post.id.startsWith("en/") && 
    slugify(post.data.author) === slugify(title)
);
---

<Base
  title={title}
  meta_title={meta_title}
  description={description}
  image={image}
>
  <section class="section-sm pb-0">
    <div class="container">
      <div
        class="row justify-center border-b border-border pb-14 dark:border-darkmode-border"
      >
        <div class="text-center lg:col-4">
          {
            image && (
              <ImageMod
                src={image}
                class="mx-auto mb-10 rounded"
                height={200}
                width={200}
                alt={title}
                format="webp"
              />
            )
          }
          <h1 class="h3 mb-6">{title}</h1>
          <div class="content">
            <Content />
          </div>
          <Social source={social} className="social-icons" />
        </div>
      </div>

      <div class="row justify-center pb-16 pt-14">
        {
          postFilterByAuthor.length > 0 ? (
            postFilterByAuthor.map((post) => (
              <div class="mb-12 md:col-6 lg:col-4">
                <BlogCard data={post} />
              </div>
            ))
          ) : (
            <div class="col-12 text-center">
              <p>No posts found by this author in English.</p>
            </div>
          )
        }
      </div>
    </div>
  </section>
</Base>
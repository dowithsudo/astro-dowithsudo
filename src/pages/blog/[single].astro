---
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import PostSingle from "@/layouts/PostSingle.astro";
import { render } from "astro:content";

export async function getStaticPaths() {
  const posts = await getSinglePage("blog");
  // Hanya ambil blog dari folder 'id'
  const idPosts = posts.filter((post) => post.id.startsWith("id/"));

  return idPosts.map((post) => ({
    params: {
      // Hilangkan 'id/' agar slug-nya benar (misal: 'artikel-pertama')
      single: post.id.replace("id/", ""),
    },
    props: { post },
  }));
}

const { post } = Astro.props;
const { title, meta_title, description, image } = post.data;
---

<Base title={title} meta_title={meta_title} description={description} image={image}>
  <PostSingle post={post} />
</Base>
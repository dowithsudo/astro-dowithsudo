---
import Logo from "@/components/Logo.astro";
import ThemeSwitcher from "@/components/ThemeSwitcher.astro";
import LanguageSwitcher from "@/components/LanguageSwitcher.astro";
import config from "@/config/config.json";
// Import kedua file menu
import menuEn from "@/config/menu.json";
import menuId from "@/config/menu.id.json";
import { IoSearch } from "react-icons/io5";

export interface ChildNavigationLink {
  name: string;
  url: string;
}

export interface NavigationLink {
  name: string;
  url: string;
  hasChildren?: boolean;
  children?: ChildNavigationLink[];
}

const { navigation_button, settings } = config;
const { pathname } = Astro.url;

// 1. Deteksi apakah bahasa saat ini Indonesia
const isId = pathname.startsWith("/id") || !pathname.startsWith("/en");

// 2. Pilih menu berdasarkan bahasa
const menuData = isId ? menuId : menuEn;
const { main }: { main: NavigationLink[] } = menuData;

// Fungsi pembantu link
const getRelativeUrl = (url: string) => {
  const isEn = pathname.startsWith("/en");
  if (!isEn) return url;
  if (url.startsWith("/en")) return url;
  const cleanedUrl = url.startsWith("/") ? url : `/${url}`;
  return `/en${cleanedUrl}`.replace(/\/$/, "");
};
---

<header class={`header z-30 ${settings.sticky_header && "sticky top-0"}`}>
  <nav class="navbar container flex justify-between items-center">
    <div class="order-0">
      <Logo />
    </div>

    <input id="nav-toggle" type="checkbox" class="hidden" />
    <label
      for="nav-toggle"
      class="order-3 cursor-pointer flex items-center lg:hidden text-text-dark dark:text-white lg:order-1"
    >
      <svg id="show-button" class="h-6 fill-current block" viewBox="0 0 20 20">
        <title>Menu Open</title>
        <path d="M0 3h20v2H0V3z m0 6h20v2H0V9z m0 6h20v2H0V0z"></path>
      </svg>
      <svg id="hide-button" class="h-6 fill-current hidden" viewBox="0 0 20 20">
        <title>Menu Close</title>
        <polygon
          points="11 9 22 9 22 11 11 11 11 22 9 22 9 11 -2 11 -2 9 9 9 9 -2 11 -2"
          transform="rotate(45 10 10)"></polygon>
      </svg>
    </label>

    <ul
      id="nav-menu"
      class="navbar-nav order-3 hidden w-full pb-6 lg:order-1 lg:flex lg:w-auto lg:mx-auto lg:space-x-2 lg:pb-0 xl:space-x-8"
    >
      {
        main.map((menu) => (
          <>
            {menu.hasChildren ? (
              <li class="nav-item nav-dropdown group relative">
                <input
                  type="checkbox"
                  id={`submenu-${menu.name}`}
                  class="peer hidden lg:hidden"
                />
                <label
                  for={`submenu-${menu.name}`}
                  class={`nav-link inline-flex items-center text-[17px] font-semibold ${
                    menu.children?.some(child => {
                      const relUrl = getRelativeUrl(child.url);
                      return pathname === relUrl || pathname === `${relUrl}/`;
                    }) ? "active" : ""
                  }`}
                >
                  {menu.name}
                  <svg class="h-4 w-4 fill-current" viewBox="0 0 20 20">
                    <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z" />
                  </svg>
                </label>
                <ul class="nav-dropdown-list hidden peer-checked:block lg:invisible lg:absolute lg:block lg:opacity-0 lg:group-hover:visible lg:group-hover:opacity-100">
                  {menu.children?.map((child) => (
                    <li class="nav-dropdown-item">
                      <a
                        href={getRelativeUrl(child.url)}
                        aria-label={child.name}
                        class={`nav-dropdown-link block ${
                          (pathname === getRelativeUrl(child.url) || pathname === `${getRelativeUrl(child.url)}/`) && "active"
                        }`}
                      >
                        {child.name}
                      </a>
                    </li>
                  ))}
                </ul>
              </li>
            ) : (
              <li class="nav-item">
                <a
                  href={getRelativeUrl(menu.url)}
                  class={`nav-link block text-[17px] font-semibold ${
                    (pathname === getRelativeUrl(menu.url) || pathname === `${getRelativeUrl(menu.url)}/`) && "active"
                  }`}
                >
                  {menu.name}
                </a>
              </li>
            )}
          </>
        ))
      }
    </ul>

    <div class="order-1 flex items-center md:order-2">
      <LanguageSwitcher />
      {
        settings.search && (
          <button
            class="border-border text-text-dark hover:text-primary dark:border-darkmode-border ml-5 mr-5 inline-block border-l border-r pl-5 pr-5 text-xl dark:text-white dark:hover:text-darkmode-primary"
            aria-label="search"
            data-search-trigger
          >
            <IoSearch />
          </button>
        )
      }
      <ThemeSwitcher className="mr-5" />
    </div>
  </nav>
</header>
---
type Pagination = {
  section?: string;
  currentPage?: number;
  totalPages?: number;
};

const { section, currentPage = 1, totalPages = 1 }: Pagination = Astro.props;

// 1. Tentukan Base Path secara cerdas
// Kita cek apakah kita sedang di direktori /en/
const isEnglish = Astro.url.pathname.includes("/en/");

// Jika section sudah dikirim sebagai "en/blog", kita gunakan itu. 
// Jika dikirim "blog" tapi kita di halaman English, kita tambahkan "en/".
let path = section || "";
if (isEnglish && !path.startsWith("en/")) {
  path = `en/${path}`;
}

const baseUrl = path.startsWith("/") ? path : `/${path}`;

// 2. Logika Navigasi
const hasPrevPage = currentPage > 1;
const hasNextPage = totalPages > currentPage;

let pageList: number[] = [];
for (let i = 1; i <= totalPages; i++) {
  pageList.push(i);
}

const getPageLink = (pageNumber: number) => {
  return pageNumber === 1 ? baseUrl : `${baseUrl}/page/${pageNumber}`;
};
---

{
  totalPages > 1 && (
    <nav class="flex items-center justify-center space-x-3" aria-label="Pagination">
      {/* Tombol Previous */}
      {hasPrevPage ? (
        <a href={getPageLink(currentPage - 1)} class="rounded px-2 py-1.5 text-text-dark hover:bg-light dark:text-darkmode-text-dark dark:hover:bg-darkmode-light">
          <span class="sr-only">Previous</span>
          <svg viewBox="0 0 20 20" fill="currentColor" height="30" width="30"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        </a>
      ) : (
        <span class="rounded px-2 py-1.5 text-text-light opacity-50">
          <svg viewBox="0 0 20 20" fill="currentColor" height="30" width="30"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
        </span>
      )}

      {/* Angka Halaman */}
      {pageList.map((num) => (
        num === currentPage ? (
          <span class="rounded bg-primary px-4 py-2 text-white dark:bg-darkmode-primary dark:text-text-dark">
            {num}
          </span>
        ) : (
          <a href={getPageLink(num)} class="rounded px-4 py-2 text-text-dark hover:bg-light dark:text-darkmode-text-dark dark:hover:bg-darkmode-light">
            {num}
          </a>
        )
      ))}

      {/* Tombol Next */}
      {hasNextPage ? (
        <a href={getPageLink(currentPage + 1)} class="rounded px-2 py-1.5 text-text-dark hover:bg-light dark:text-darkmode-text-dark dark:hover:bg-darkmode-light">
          <span class="sr-only">Next</span>
          <svg viewBox="0 0 20 20" fill="currentColor" height="30" width="30"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>
        </a>
      ) : (
        <span class="rounded px-2 py-1.5 text-text-light opacity-50">
          <svg viewBox="0 0 20 20" fill="currentColor" height="30" width="30"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" /></svg>
        </span>
      )}
    </nav>
  )
}